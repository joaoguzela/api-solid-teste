{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",        
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true, 
    "esModuleInterop": true,
    "strict": true,       
    "rootDir": ".",                             
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }, 
  },
}
